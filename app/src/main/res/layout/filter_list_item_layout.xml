<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_item_horizontal_margin">

    <TextView
        android:id="@+id/range_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/range"
        android:textSize="@dimen/list_item_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_range_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:textSize="@dimen/list_item_text_size"
        app:layout_constraintStart_toEndOf="@+id/range_label_text_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1990 - 2005" />

    <TextView
        android:id="@+id/gender_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/gender"
        android:textSize="@dimen/list_item_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/range_label_text_view" />

    <TextView
        android:id="@+id/gender_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/list_item_text_size"
        app:layout_constraintStart_toStartOf="@+id/date_range_text_view"
        app:layout_constraintTop_toBottomOf="@+id/date_range_text_view"
        tools:text="Male" />

    <TextView
        android:id="@+id/countries_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/countries"
        android:textSize="@dimen/list_item_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_label_text_view" />

    <TextView
        android:id="@+id/countries_list_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/list_item_text_size"
        app:layout_constraintStart_toStartOf="@+id/gender_text_view"
        app:layout_constraintTop_toBottomOf="@+id/gender_text_view"
        tools:text="Norway, Singapore, Sweden, China" />

    <TextView
        android:id="@+id/colors_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/color"
        android:textSize="@dimen/list_item_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countries_label_text_view" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="@dimen/list_item_text_size"
        app:layout_constraintStart_toStartOf="@+id/countries_list_text_view"
        app:layout_constraintTop_toBottomOf="@+id/countries_list_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>